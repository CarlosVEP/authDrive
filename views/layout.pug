doctype html
html
  head
    title= title
    script(src='/js/jquery.min.js')
    script(src="/js/bootstrap.min.js")
    //link(rel='stylesheet', href='css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
    link(rel='stylesheet', href='/css/bootstrap.min.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href="#") Main title
      .navbar-nav.mr-auto
      ul.navbar-nav.mt-2.mt-lg-0
        if user
          if(user.username)
            li.nav-item.nav-link Bienvenido #{user.username}
          if(user.google && user.google.name)
            li.nav-item.nav-link Bienvenido #{user.google.name}
          li.nav-item
            a.nav-link(href="/logout") Salir 
        else
          li.nav-item
            a.nav-link(href="/login") Logueate
          li.nav-item
            a.nav-link(href="/register") Registrate
    block content