extends layout
block content
  .row
    .col.s12
      ul.collection
        li.collection-item.avatar
          //- img.circle(src='#{avatar}', alt='avatar')
          span.title #{user.google.name}
          p googleid - (user id) #{user.google.id}
          p email - #{user.google.email}
    .col.s12.m4.center
      div
        if (parseData.file == "uploaded")
          .light-blue.lighten-1(style='padding: 2px 10px')
            p File successfully uploaded
        else if (parseData.file == "notuploaded")
          .light-blue.lighten-1(style='padding: 2px 10px')
            p File failed to upload please try again
      form(action='/upload', method='post', enctype='multipart/form-data')
        .file-field.input-field
          .btn
            span File
            input(type='file', required='', name='file_upload')
          //- .file-path-wrapper
          //-   input.file-path.validate(type='text')
        button.btn.waves-effect.waves-light(style='display: block; margin: 0 auto', type='submit') UPLOAD
  h1 profile
  .card.card-body
    h3= user.email
    p= user.password
    p= user.id
  .col-sm-6
    .well
      h3.text-danger
        span.fa.fa-google-plus
        |  Google
      p
        strong id
        | : #{user.google.id}
        br
        strong token
        | : #{user.google.token}
        br
        strong email
        | : #{user.google.email}
        br
        strong name
        | : #{user.google.name}